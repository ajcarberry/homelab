{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "profile": "{{ user `environment`}}",
      "instance_type": "t2.micro",
      "ssh_username": "admin",
      "ami_name": "debian-{{timestamp}}",
      "shutdown_behavior": "terminate",
      "subnet_filter": {
        "filters": {
          "tag:Extra": "build"
        },
        "most_free": true,
        "random": false
      },
      "run_tags": {
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Name": "bake-debian-{{timestamp}}",
        "Environment": "{{ user `environment` }}",
        "Automation": "packer"
      },
      "tags": {
        "OS": "debian",
        "Release": "stretch",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Name": "base-debian",
        "Environment": "{{ user `environment` }}",
        "Automation": "packer"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "debian-stretch-hvm-x86_64*",
          "root-device-type": "ebs"
        },
        "owners": ["379101102735"],
        "most_recent": true
      }
    }
  ]
}
